953. Verifying an Alien Dictionary
//TC=O(nk) SC=O(1)
class Solution {
    HashMap<Character,Integer>map=new HashMap<>();
    public boolean isAlienSorted(String[] words, String order) {

        for(int i=0;i<order.length();i++){
            char c=order.charAt(i);
            map.put(c,i);
        }

        for(int i=0;i<words.length-1;i++){
            String firstStr=words[i];
            String secondStr=words[i+1];
            
            if(notSorted(firstStr,secondStr)){
                return false;
            }
        }
        return true;
    }
    private boolean notSorted(String first,String second){

        int fl=first.length();
        int sl=second.length();

        for(int i=0;i<fl && i<sl;i++){
            char fChar=first.charAt(i);
            char sChar=second.charAt(i);
            if(fChar!=sChar){
                return map.get(fChar)>map.get(sChar);
            }
        }
    return fl>sl;

    }
}
